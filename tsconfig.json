{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "DOM"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": false,
    "sourceMap": false,
    "allowJs": false,
    "downlevelIteration": true
  },
  "includes": ["src"],
  "exclude": ["test", "**/*.test.ts"]
}
